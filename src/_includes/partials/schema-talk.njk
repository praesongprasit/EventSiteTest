<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Event",
    "url": "{{ page.url | absoluteUrl(site.url) }}",
    "name": "{{ talkTitle }} by {{ speaker }}",
    "description": "{{ talkExcerpt }}",
    "startDate": "{{ talkStartTime }}",
    "endDate": "{{ talkEndTime }}",
    "image": {
      "@type": "ImageObject",
      "url": "{{ featuredImage | absoluteUrl(site.url) if featuredImage else site.image }}",
      "description": "{{ featuredImageAlt if featuredImageAlt else site.imageAlt }}",
      "width": "{{ featuredImageWidth if featuredImageWidth else site.imageWidth }}",
      "height": "{{ featuredImageHeight if featuredImageHeight else site.imageHeight }}"
    },
    "performer": {
      "@type": "Person",
      "name": "{{ speaker }}"
    },
    "location": {
      "@type": "Place",
      "name": "{{ EVENT_2025.location.name }}",
      "address": {
        "@type": "PostalAddress",
        "name": "{{ EVENT_2025.location.address.name }}",
        "streetAddress": "{{ EVENT_2025.location.address.streetAddress }}",
        "addressLocality": "{{ EVENT_2025.location.address.addressLocality }}",
        "postalCode": "{{ EVENT_2025.location.address.postalCode }}",
        "addressRegion": "{{ EVENT_2025.location.address.addressRegion }}",
        "addressCountry": "NZ"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": "{{ EVENT_2025.location.geo.latitude }}",
        "longitude": "{{ EVENT_2025.location.geo.longitude }}"
      }
    },
    "superEvent": {
      {%- include 'partials/schema.njk' -%}
    }
  }
</script>